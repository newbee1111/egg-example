<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="public/css/index.css" />
  <title>Document</title>
</head>

<body>
  <form>
    <label for="username">手机号</label>
    <input type="text" name="username" value="" placeholder="手机号" id="telephone"/>
    <input type="button" name="getMes" value="获取验证码" id="getMes"/>
    <label for="password">验证码</label>
    <input type="text" name="text" value="" id="validateCode">
    <input type="button" name="submit" value="登录" id="submit">
  </form>
  <script type="text/javascript" src="public/js/jquery-1.8.2.min.js" ></script>
  <script type="text/javascript" src="public/js/loginVerify.js"></script>
  <script>
    $(document).ready(function(){
      var token = localStorage.getItem('token');
      if(token){
        $.ajax({
          url:'/token',
          type:'post',
          dataType:'json',
          data: { token },
          success(mes){
            console.log(mes)
          }
        })
      }else {
        $("#getMes").click(function(){
          var tel = $("#telephone").val();
          if(!tel){
            alert('please input your phone');
            return;
          }
          $.ajax({
            type:'post',
            url:'/getMes',
            data: { tel },
            dataType: 'json',
            success: function(mes){
              console.log(mes)
              var tel = $("#telephone");
              var validateCode = $("#validateCode");
              var submitBtn = $("#submit");
              loginVerify(tel,validateCode,submitBtn, mes);
            }
          })
        });
      }
    })
  </script>
</body>

</html>