<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="public/css/index.css" />
  <title>Document</title>
</head>

<body>
  <form>
    <input type="text" id="event" />
    <input type="button" id="submit" value="提交" />
  </form>
  <ul>
    <% for(var i = 0; i<allEvents.events.length; i++){-%>
      <li>
        <span class="left"><%= allEvents.events[i].event-%></span>
        <span><%if(allEvents.events[i].status){-%>已完成<%}else{-%>未完成<%}-%></span>
        <a href="/ejs/<%= allEvents.events[i].id%>">
          <%if(allEvents.events[i].status){-%>取消完成<%}else{%>标注完成<%}-%>
        </a>
        <a href="/deleteEvent/<%= allEvents.events[i].id%>" class="right">
          删除事件
        </a>
      </li>
    <%}-%>
  </ul>
  <script type="text/javascript" src="public/js/jquery-1.8.2.min.js"></script>
  <script>
    $(document).ready(function() {
      $("#submit").on('click',function(){
        var event = $("#event").val();
        if(!event){
          alert('wrong type of event');
          return;
        }
        $.ajax({
          type:'post',
          dataType: 'json',
          data: {event, status: 0},
          url: '/addEvent',
          success: function(mes){
            console.log(mes)
            if(mes.message === 'success'){
              location.reload();
            }
          }
        })
      })
    })
    </script>
</body>

</html>